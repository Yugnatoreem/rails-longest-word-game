<h1>NEW GAME</h1>

<p> <%= @letters %></p>

<form action="score" method="post" placeholder="Compose a word..." data-turbo="false">
  <input type="text" name="word">
  <input type="hidden" name="letters" value="<%= @letters.join(',') %>">
  <input class="bt btn-primary button" type="submit" value="Submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
